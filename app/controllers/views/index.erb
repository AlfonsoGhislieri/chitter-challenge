<form action="/users/new">
  <input type="submit" value="Sign up">
</form>

<% if @user %>

  <h2> Welcome <%=@user.email%> </h2>
  <form action="/sessions/delete" method="post">
    <input type="submit" value="Sign out">
  </form>

  <div>
    <form action="/peeps/new" method="post">
      <input type="text" name="message">
      <input type="submit" value="Chitter">
    </form>
  </div>

<% else %>

  <form action="/sessions/new">
    <input type="submit" value="Sign in">
  </form>

<% end %>

<div>
  <ul>
    <% @chitters.each do |chitter| %>
      <li> <%= chitter.message %> <br> 
      <%= User.find(id: chitter.user_id).name %> - <%= User.find(id: chitter.user_id).username %> <br>
       <%= chitter.timestamp %> </li>
    <% end %>
  </ul>
</div>

